    <script>
        // Create digital lines animation
        function createDigitalLines() {
            const container = document.getElementById('digital-lines');
            const lineCount = 8;
            
            for (let i = 0; i < lineCount; i++) {
                // Create horizontal lines
                const hLine = document.createElement('div');
                hLine.className = 'line line-horizontal';
                hLine.style.top = `${Math.random() * 100}%`;
                hLine.style.animationDuration = `${6 + Math.random() * 8}s`;
                hLine.style.animationDelay = `${0.5 + Math.random() * 5}s`;
                container.appendChild(hLine);
                
                // Create vertical lines
                const vLine = document.createElement('div');
                vLine.className = 'line line-vertical';
                vLine.style.left = `${Math.random() * 100}%`;
                vLine.style.animationDuration = `${7 + Math.random() * 9}s`;
                vLine.style.animationDelay = `${0.5 + Math.random() * 5}s`;
                container.appendChild(vLine);
                
                // Create diagonal lines
                if (i < 4) {
                    const dLine = document.createElement('div');
                    dLine.className = 'line line-diagonal';
                    dLine.style.left = `${Math.random() * 50}%`;
                    dLine.style.top = `${Math.random() * 50}%`;
                    dLine.style.animationDuration = `${10 + Math.random() * 10}s`;
                    dLine.style.animationDelay = `${0.5 + Math.random() * 5}s`;
                    container.appendChild(dLine);
                }
            }
        }
        
        // Initialize lines on page load
        createDigitalLines();
        
        function handleSubmit(event) {
            event.preventDefault();
            const emailInput = document.getElementById('email-input');
            const successMsg = document.getElementById('success-msg');
            const submitBtn = event.target.querySelector('.waitlist-btn');
            
            if (emailInput.value) {
                // Disable button and show loading state
                submitBtn.disabled = true;
                submitBtn.textContent = 'Joining...';
                
                // Google Apps Script URL for collecting waitlist emails
                const scriptURL = 'https://script.google.com/macros/s/AKfycbyH0vR1myd-iDCkRlpiFxu7LhBRogkBpMYExfD_GGBEWMp7u9nGf2Cv7UihQG2sRvkpXw/exec';
                
                const formData = new FormData(event.target);
                
                fetch(scriptURL, {
                    method: 'POST',
                    body: formData,
                    mode: 'no-cors'  // This bypasses CORS but means we can't read the response
                })
                .then(() => {
                    // With no-cors mode, we assume success if no error is thrown
                    console.log('Form submitted');
                    successMsg.textContent = '✓ You\'re on the list! We\'ll notify you when we launch.';
                    successMsg.style.display = 'block';
                    emailInput.value = '';
                    
                    setTimeout(() => {
                        successMsg.style.display = 'none';
                    }, 5000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    successMsg.textContent = '✓ Thanks for joining! Your email has been recorded.';
                    successMsg.style.display = 'block';
                    emailInput.value = '';
                    
                    setTimeout(() => {
                        successMsg.style.display = 'none';
                    }, 5000);
                })
                .finally(() => {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Join Waitlist';
                });
            }
        }
    </script>
